<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="Alona blue sailing charters in central Philippines.">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= page_title %></title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= favicon_link_tag 'icons/apple-icon-57x57.png', rel: 'apple-touch-icon', sizes: '57x57' %>
  <%= favicon_link_tag 'icons/apple-icon-60x60.png', rel: 'apple-touch-icon', sizes: '60x60' %>
  <%= favicon_link_tag 'icons/apple-icon-72x72.png', rel: 'apple-touch-icon', sizes: '72x72' %>
  <%= favicon_link_tag 'icons/apple-icon-76x76.png', rel: 'apple-touch-icon', sizes: '76x76' %>
  <%= favicon_link_tag 'icons/apple-icon-114x114.png', rel: 'apple-touch-icon', sizes: '114x114' %>
  <%= favicon_link_tag 'icons/apple-icon-120x120.png', rel: 'apple-touch-icon', sizes: '120x120' %>
  <%= favicon_link_tag 'icons/apple-icon-144x144.png', rel: 'apple-touch-icon', sizes: '144x144' %>
  <%= favicon_link_tag 'icons/apple-icon-152x152.png', rel: 'apple-touch-icon', sizes: '152x152' %>
  <%= favicon_link_tag 'icons/apple-icon-180x180.png', rel: 'apple-touch-icon', sizes: '180x180' %>
  <%= favicon_link_tag 'icons/android-icon-192x192.png', rel: 'icon', sizes: '192x192', type: 'image/png' %>
  <%= favicon_link_tag 'icons/android-icon-32x32.png', rel: 'icon', sizes: '32x32', type: 'image/png' %>
  <%= favicon_link_tag 'icons/android-icon-96x96.png', rel: 'icon', sizes: '96x96', type: 'image/png' %>
  <%= favicon_link_tag 'icons/android-icon-16x16.png', rel: 'icon', sizes: '16x16', type: 'image/png' %>
  <meta name="msapplication-TileColor" content="#ffffff">
  <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
  <meta name="theme-color" content="#ffffff">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>
<div class="alona-blue layout">
  <main class="layout-content">
    <%= yield %>
  </main>
  <footer class="footer">
    <div class="grid">
      <div class="row-12-col">
        <div class="footer-content">
          <div class="footer-left-section color-text-blue">
            <span>Tagbilaran Pier, Tagbilaran Bohol, Philippines</span> |
            <span><a href="mailto:boholblue@gmail.com">boholblue@gmail.com</a></span> |
            <span><a href="tel:+09177061590" class="tel">+0 (917) 706-1590</a></span>
          </div>
        </div>
      </div>
    </div>
  </footer>
</div>
</body>
</html>
